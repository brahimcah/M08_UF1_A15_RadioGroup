<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/tv_seleccio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center"
        android:padding="10dp"
        android:text="Configura'm"
        android:textSize="10dp"
        android:textColor="@color/colorRed"></TextView>

    <LinearLayout
        android:id="@+id/segona_linea"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_seleccio"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ss"
            android:checkedButton="@+id/rb_so">

        <RadioButton
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opcions de lletra " />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opcions de colors " />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/segona_linea"
        android:layout_marginBottom="10dp"
        android:text="Trieu el mode" />

    <RadioGroup
        android:id="@+id/rg_opcions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ss"
        android:checkedButton="@+id/rb_so">

        <RadioButton
            android:id="@+id/rb_so"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="So" />

        <RadioButton
            android:id="@+id/rb_vibracio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VibraciÃ³" />

        <RadioButton
            android:id="@+id/rb_silenci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silenci" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_seleccio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rb_silenci"
        android:layout_marginTop="200dp"
        android:text="APLICAR" />

</RelativeLayout>

